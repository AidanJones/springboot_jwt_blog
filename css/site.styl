h1,h2,h3,h4,h5
	color: black

#container.container
	max-width: 700px;

ul.archive 
	margin: 0;
	padding: 0;
	li.post
		list-style: none;
		padding-bottom: 60px;
		margin-bottom: 60px;
		border-bottom: 1px solid #f1f1f1;



.entry-title
	position: relative; 
.author 
	img 
		border-radius: 100px;
		position: absolute;
		left: -100px
		top: 0;
.entry-meta
	font-size: 12px;
	text-transform: uppercase
	color: #999;
	margin: 20px 0;
	a 
		color: #666;

.entry-content
	font-size: 18px;
	color: #4d4d4d;
	line-height: 160%;

	img 
		max-width: 100%;
		height: auto;

.readmore
	text-transform: uppercase
	font-weight: bold
	margin-top: 30px;
	display: inline-block
	font-size: 13px
	background: #4E7AC7
	border-radius: 100px;
	padding: 4px 20px;
	color: white;
	&:hover 
		background: darken(#4E7AC7, 60%);
		color: white;

.blog-single
	margin-top: 50px;
	.entry-meta 
		margin-bottom: 40px

.navigation
	overflow: hidden
	margin-bottom: 50px;
	.nav-previous, .nav-next
		width: 50%;
		display: inline-block
		a 
			font-weight: bold
			margin-bottom: 100px;
	.nav-next
		display: inline-block
		text-align: right
		float: right


pre.prettyprint
	padding: 20px !important;
	border: 0 !important;
	border-radius: 3px;

#auth0 
	background: #ecf0f1;
	padding: 10px;
	text-align: center
	border-radius: 3px;
	margin: 30px 0;
	overflow: hidden
	border: 0 !important;